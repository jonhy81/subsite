{
    "name": "ec-europa/subsite",
    "require": {
        "ec-europa/toolkit": "dev-develop as 3.0.0"
    },
    "scripts": {
        "post-install-cmd": [
          "@toolkit-install",
          "@toolkit-docker"
        ],
        "post-update-cmd": [
          "@toolkit-install",
          "@toolkit-docker"
        ],
        "toolkit-install": "PROJECT=$(pwd) composer run-script toolkit-install -d ./vendor/ec-europa/toolkit",
        "toolkit-docker": "./vendor/ec-europa/toolkit/includes/docker/dbash up -d"
    }
}
